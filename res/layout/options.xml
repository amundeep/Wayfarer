<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"> 
            
            <TextView
                android:id="@+id/carTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#cccccc"
                android:textSize="24dp"
                android:text="Travel By Car" />
            
            <TextView
                android:id="@+id/flightTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/carTrip"
                android:textSize="24dp"
                android:textColor="#565656"
                android:layout_marginLeft="50dp"
                android:text="Travel By Flight" />
         
         </RelativeLayout> 
       		
       		<View
                android:layout_width="fill_parent"
				android:layout_height="2dip"
				android:background="#95A5A6"
				android:layout_marginTop="25dp"
				android:layout_marginBottom="25dp" />
       		
       		<TextView
                android:id="@+id/carTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:layout_marginLeft="20dp"
                android:textSize="18dp"
                android:text="Departure Date" />
       		
           <DatePicker
                android:id="@+id/leaveDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
           
            <View
                android:layout_width="fill_parent"
				android:layout_height="2dip"
				android:background="#95A5A6"
				android:layout_marginTop="25dp"
				android:layout_marginBottom="25dp" />

           <TextView
                android:id="@+id/carTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:layout_marginLeft="20dp"
                android:textSize="18dp"
                android:text="Return Date" />
                   		
            <DatePicker
                android:id="@+id/returnDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <View
                android:layout_width="fill_parent"
				android:layout_height="2dip"
				android:background="#95A5A6"
				android:layout_marginTop="25dp"
				android:layout_marginBottom="25dp" />
            
            <TextView
                android:id="@+id/carTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:textSize="18dp"
                android:text="Minimum Hotel Rating" />
            
            <RatingBar
                android:id="@+id/hotelRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
            
            <View
                android:layout_width="fill_parent"
				android:layout_height="2dip"
				android:background="#95A5A6"
				android:layout_marginTop="25dp"
				android:layout_marginBottom="25dp" />
            
            <RelativeLayout
           		android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_gravity="center"> 
            
            	 <TextView
	                android:id="@+id/adultsText"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_centerVertical="true"
	                android:textColor="#cccccc"
	                android:textSize="24dp"
	                android:text="Adults?"
	                android:layout_marginRight="20dp" />
            	 
            	<NumberPicker 
            	    android:id="@+id/numAdultPicker"
            	    android:layout_width="wrap_content"
            	    android:layout_height="wrap_content"
            	    android:layout_toRightOf="@id/adultsText"/>
            	<NumberPicker 
            	    android:id="@+id/numChildrenPicker"
            	    android:layout_width="wrap_content"
            	    android:layout_height="wrap_content"
            	    android:layout_toRightOf="@id/numAdultPicker"/>
            	
            	<TextView
	                android:id="@+id/childrenText"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_centerVertical="true"
	                android:textColor="#cccccc"
	                android:layout_toRightOf="@id/numChildrenPicker"
	                android:textSize="24dp"
	                android:layout_marginLeft="20dp"
	                android:text="Children?" />
            	
            </RelativeLayout>
            
            <Button
                android:id="@+id/submitButton"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:text="SUBMIT"
                android:textColor="#ffffff"
                android:layout_gravity="right"
                android:layout_marginRight="50dp"
                android:background="@drawable/submit_button"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="25dp"
                />
            
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
